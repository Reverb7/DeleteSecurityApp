stages:
  - deploy

deploy_production:
  stage: deploy
  image: alpine:latest
  only:
    - main

  before_script:
    - apk add --no-cache openssh rsync
    - mkdir -p ~/.ssh
    - echo "$SSH_PRIVATE_KEY" | tr -d '\r' > ~/.ssh/id_ed25519
    - chmod 600 ~/.ssh/id_ed25519
    - ssh-keyscan -H "$EC2_HOST" >> ~/.ssh/known_hosts

  script:
    - rsync -avz --delete ./ $EC2_USER@$EC2_HOST:$DEPLOY_PATH
